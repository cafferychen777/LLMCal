{
    "name": "LLMCal",
    "identifier": "com.popclip.extension.llmcal",
    "description": "Create calendar events using natural language.",
    "app": {
        "name": "Calendar",
        "link": "com.apple.iCal",
        "platform": ["macos"]
    },
    "options": [
        {
            "identifier": "anthropic_api_key",
            "label": "Anthropic API Key",
            "type": "string",
            "description": "Enter your Anthropic API key from https://console.anthropic.com/",
            "secure": true
        },
        {
            "identifier": "claude_model",
            "label": "Claude Model",
            "type": "multiple",
            "description": "Choose the AI model for processing events",
            "values": [
                "claude-opus-4-1-20250805",
                "claude-sonnet-4-20250514",
                "claude-3-5-haiku-20241022"
            ],
            "value labels": [
                "Claude Opus 4.1 (Most Powerful, $15/$75)",
                "Claude Sonnet 4.0 (Balanced, $3/$15)",
                "Claude Haiku 3.5 (Fast, $0.80/$4)"
            ],
            "default value": "claude-sonnet-4-20250514"
        },
        {
            "identifier": "user_preferences",
            "label": "Personal Preferences",
            "type": "string",
            "description": "Enter your calendar preferences (e.g., 'I work 9-5 on weekdays', 'Put gym events in Personal calendar', 'Default meeting duration is 1 hour')",
            "default value": ""
        },
        {
            "identifier": "zoom_account_id",
            "label": "Zoom Account ID",
            "type": "string",
            "description": "Enter your Zoom Account ID",
            "secure": true
        },
        {
            "identifier": "zoom_client_id",
            "label": "Zoom Client ID",
            "type": "string",
            "description": "Enter your Zoom Client ID from Zoom Marketplace",
            "secure": true
        },
        {
            "identifier": "zoom_client_secret",
            "label": "Zoom Client Secret",
            "type": "string",
            "description": "Enter your Zoom Client Secret from Zoom Marketplace",
            "secure": true
        },
        {
            "identifier": "zoom_email",
            "label": "Zoom Email",
            "type": "string",
            "description": "Enter your email address associated with Zoom account"
        },
        {
            "identifier": "zoom_name",
            "label": "Zoom Display Name",
            "type": "string",
            "description": "Enter your display name for Zoom meetings"
        }
    ],
    "actions": [
        {
            "title": "Add to Calendar",
            "icon": "LLMCal.png",
            "shell script file": "calendar.sh",
            "requirements": ["text"],
            "stay": false
        }
    ],
    "entitlements": [
        "network"
    ],
    "requirements": ["jq"],
    "popclipVersion": 3857
}
